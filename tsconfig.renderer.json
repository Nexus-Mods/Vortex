{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",

    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false,

    "inlineSourceMap": true,
    "inlineSources": true,
    "preserveConstEnums": true,
    "removeComments": true,

    "rootDir": "./src",
    "outDir": "./out",

    "jsx": "react",

    "noImplicitAny": false,
    "useUnknownInCatchVariables": true
  },
  "files": [
    "src/index.ts",
    "src/renderer.tsx",
    "src/splash.ts"
  ]
}
