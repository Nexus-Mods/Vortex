{
  "asar": true,
  "asarUnpack": [
    "node_modules/7z-bin",
    "node_modules/nbind",
    "node_modules/bootstrap-sass/assets/stylesheets",
    "node_modules/react-select/scss",
    "node_modules/fomod-installer/dist",
    "node_modules/json-socket",
    "**/*.node",
    "!node_modules/**/node_modules/**/*.node"
  ],
  "afterSign": "./createMD5List.js",
  "appId": "com.nexusmods.vortex",
  "win": {
    "target": "nsis",
    "publish": [
      {
        "provider": "github",
        "private": false
      }
    ],
    "forceCodeSigning": true,
    "publisherName": "Black Tree Gaming Limited",
    "extraFiles": [
      {
        "from": "assets/vcruntime",
        "to": ".",
        "filter": "*.dll"
      }
    ]
  },
  "nsis": {
    "perMachine": true,
    "runAfterFinish": true,
    "menuCategory": true,
    "uninstallDisplayName": "${productName}"
  },
  "linux": {
    "target": "tar.bz2",
    "icon": "assets/images/vortex.png"
  },
  "extraResources": [
    "LICENSE.md",
    "locales",
    {
      "from": "app/bundledPlugins",
      "to": "bundledPlugins"
    },
    {
      "from": "extensions",
      "to": "bundledPlugins",
      "filter": "*/index.js"
    },
    {
      "from": "extensions/games",
      "to": "bundledPlugins"
    },
    {
      "from": "src/stylesheets",
      "to": "assets/css"
    },
    {
      "from": "node_modules/bootstrap-sass/assets/stylesheets/_bootstrap.scss",
      "to": "assets/css/bootstrap.scss"
    }
  ],
  // NOTE: Having object rules in the list causes it to be split into independent groups. The builtin defaults will only get
  //       applied to the first group if its "from" is the appdir, otherwise they won't be used, contrary to the docs.
  //       Also, any "group" that has only exclusions will be treated as an implicit `**/*` rule. Since rules are applied in order,
  //       this will cancel out any rules that came before it.
  // https://github.com/electron-userland/electron-builder/blob/v22.6.0/packages/app-builder-lib/src/fileMatcher.ts#L132-L136
  "files": [
    { "filter": "$defaults$" }, // Dummy group for the builtin default rules. Filter placeholder to prevent implicit **/*
    {
      "from": "app",
      "filter": [
        "!bundledPlugins",
        "!**/*.map"
      ]
    },
    {
      "from": "src",
      "filter": [
        "index.html",
        "splash.html"
      ]
    },
    "assets",
    "!assets/vcruntime",

    // Exclude native build output except for the node file
    "!**/build${/*}",
    "node_modules/**/*.node",

    // Only include win32-x64 prebuilds
    "!**/node_modules/*/prebuilds${/*}",
    "**/node_modules/*/prebuilds/win32-x64/*",

    "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,test,__tests__,tests,powered-test,example,examples,*.d.ts}",
    "!**/node_modules/.bin${/*}",
    "!**/*.{o,hprof,orig,pyc,pyo,rbc}",
    "!**/*.iobj",
    "!**/*.ipdb",
    "!**/*.vcxproj",
    "!**/*.vcxproj.filters",
    "!**/Makefile",
    "!**/._*",
    "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,__pycache__,[tT]humbs.db,.gitignore,.gitattributes,.editorconfig,.flowconfig,.yarn-metadata.json,.idea,appveyor.yml,.travis.yml,circle.yml,npm-debug.log,.nyc_output,yarn.lock,.yarn-integrity}",
    "!**/*.{pdb,lib,VC.db,exp,gypi,d.ts}",
    "!**/*.{c,h,cpp,hpp,hxx,cxx}",
    "!**/autogypi.json",
    "!**/*.gyp",
    "!**/*.map",
    "!**/node_modules/edge/lib/native${/*}",
    "!**/node_modules/edge/src${/*}",
    "!**/node_modules/leveldown/deps${/*}",
    "!**/node_modules/node-sass/{build,src,vendor}${/*}",
    "!**/node_modules/recharts/umd${/*}",
    "!**/node_modules/ffi/deps",
    "!**/node_modules/harmony-patcher/VortexHarmonyInstaller",
    "!**/node_modules/bootstrap-sass/assets/fonts",
    "!**/node_modules/recharts/node_modules/d3-scale/img",
    "!**/node_modules/recharts/node_modules/d3-shape/img",
    "!**/node_modules/d3-geo/img",
    "!**/node_modules/fomod-installer/Build",
    "!**/node_modules/fomod-installer/lib",
    "!**/node_modules/fomod-installer/InstallScripting",
    "!**/node_modules/libxmljs/vendor/libxml",
    "!**/node_modules/native-errors/Detours"
  ],
  "buildDependenciesFromSource": false,
  "npmRebuild": false
}
