{
  "name": "theme-switcher",
  "version": "0.0.1",
  "description": "Settings section to switch and customize UI themes",
  "main": "./out/index.js",
  "scripts": {
    "tsc": "tsc -p .",
    "webpack": "node ./node_modules/webpack/bin/webpack --config webpack.config.js --display-error-details --progress --profile --color",
    "postinstall": "electron-rebuild -w font-manager -t prod,dev",
    "prebuild": "typings prune && typings install",
    "copy_lib": "copyfiles -u 4 node_modules/font-manager/build/Release/fontmanager.node dist",
    "copy_themes": "copyfiles themes/**/* dist",
    "build": "npm run tsc && npm run webpack && npm run copy_lib && npm run copy_themes && extractInfo"
  },
  "author": "Black Tree Gaming Ltd.",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/fs-extra-promise": "^1.0.1",
    "@types/react": "^0.14.55",
    "@types/react-bootstrap": "^0.0.50",
    "@types/react-color": "2.11.2",
    "@types/react-redux": "4.4.35",
    "@types/redux": "^3.6.0",
    "@types/redux-thunk": "^2.1.0",
    "copyfiles": "^1.2.0",
    "electron-rebuild": "^1.5.11",
    "webpack": "^1.13.2"
  },
  "dependencies": {
    "font-manager": "^0.2.2",
    "fs-extra-promise": "^1.0.1",
    "vortex-api": "file:../../api",
    "react-bootstrap": "^0.31.0",
    "react-color": "^2.12.1",
    "redux": "^3.6.0"
  }
}
