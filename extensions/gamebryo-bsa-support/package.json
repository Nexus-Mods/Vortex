{
  "name": "gamebryo-bsa-support",
  "version": "0.0.1",
  "description": "Support for (old) gamebryo data archives",
  "main": "./out/index.js",
  "scripts": {
    "tsc": "tsc -p .",
    "webpack": "node ./node_modules/webpack/bin/webpack --config webpack.config.js --display-error-details --progress --profile --color",
    "clear": "rm-local-modules",
    "postinstall": "electron-rebuild -w bsatk -t dev,prod",
    "copy_bsatk": "copyfiles -f ./node_modules/bsatk/build/Release/nbind.node ./dist/bsatk",
    "build": "npm run tsc && npm run webpack && npm run copy_bsatk && extractInfo",
    "installDev": "copyfiles -u 1 dist/**/* ../../out/bundledPlugins/gamebryo-bsa-support",
    "buildDev": "npm run build && npm run installDev"
  },
  "author": "Black Tree Gaming Ltd.",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/i18next": "^8.4.0",
    "@types/rimraf": "^0.0.28",
    "bsatk": "file:../../lib/cpp/bsatk",
    "bluebird": "^3.5.1",
    "copyfiles": "^1.2.0",
    "electron-rebuild": "^1.5.7",
    "vortex-api": "file:../../api",
    "rimraf": "^2.6.1",
    "rm-local-modules": "^0.0.2",
    "webpack": "^1.13.2"
  }
}
